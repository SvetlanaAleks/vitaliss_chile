section.categories
	.container
		h2.categories__title.title Популярные категории
	.container.container--list
		.categories__list
			.category
				.category__front
					picture
						source(srcset="img/category_1.webp", type="image/webp")
						img(src="img/category_1.jpg", alt="")
				.category__back
					h4.category__title Для красоты
					.category__bottom
						p.category__desc натуральные средства для красоты и молодости
						a.category__btn.btn(href="catalog.html?id=beauty") ПОДРОБНЕЕ
			.category
				.category__front
					picture
						source(srcset="img/category_2.webp", type="image/webp")
						img(src="img/category_2.jpg", alt="")
				.category__back
					h4.category__title Для здоровья
					.category__bottom
						p.category__desc натуральные средства для поддержки здоровья и укрепления иммунитета
						a.category__btn.btn(href="catalog.html?id=health") ПОДРОБНЕЕ
